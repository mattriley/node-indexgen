{
    "name": "module-indexgen",
    "version": "0.1.0",
    "description": "Generates index.js files",
    "author": "Matt Riley",
    "license": "ISC",
    "homepage": "https://github.com/mattriley/node-module-indexgen",
    "repository": "github:mattriley/node-module-indexgen",
    "main": "index.js",
    "bin": {
        "indexgen": "bin/indexgen.js"
    },
    "scripts": {
        "test": "tape 'tests/**/*.test.js' | tap-spec",
        "coverage": "nyc npm t"
    },
    "dependencies": {
        "module-composer": "^0.1.3",
        "glob": "^7.1.6",
        "lodash.camelcase": "^4.3.0",
        "minimist": "^1.2.5"
    },
    "devDependencies": {
        "eslint": "^7.4.0",
        "nyc": "^14.1.1",
        "tap-spec": "^5.0.0",
        "tape": "^4.12.0"
    },
    "nyc": {
        "all": true,
        "include": [
            "src/**/*.js"
        ],
        "reporter": [
            "lcov",
            "text"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
